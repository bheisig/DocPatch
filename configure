##
## configure script
## TODO This is only a quick'n'dirty version.
##

echo "Check system configuration for docpatch..."

local_config="usr/share/doc/docpatch/examples/etc/docpatch.conf"
makefile="Makefile"

function matchAndReplace {
  echo -n "Check ${1}... "
  path_to_exe=$(which $1)
  if [ $? -gt 0 ]; then
      echo "[FAILED]"
      abort 1
    fi
  tmp_local_config="/tmp/docpatch_local_config.tmp"
  sed "s|\$(which ${1})|\"${path_to_exe}\"|" $local_config > $tmp_local_config
  if [ $? -gt 0 ]; then
      echo "[FAILED]"
      abort 3
    fi
  mv $tmp_local_config $local_config
  echo "[DONE]"
}

function replaceExeInMakefile {
  echo -n "Prepare ${1}... "
  path_to_exe=$(which $1)
  if [ $? -gt 0 ]; then
      echo "[FAILED]"
      abort 1
    fi
  tmp_makefile="/tmp/docpatch_makefile.tmp"
  sed "s|\$(which ${1})|${path_to_exe}|" $makefile > $tmp_makefile
  if [ $? -gt 0 ]; then
      echo "[FAILED]"
      abort 2
    fi
  mv $tmp_makefile $makefile
  echo "[DONE]"
}

function abort {
  echo "Failed to configure system."
  exit $1
}

if [ ! -r $local_config ]; then
    echo "${local_config}: file not found or not accessible."
    abort 1
  fi

matchAndReplace "git"
matchAndReplace "gpg"
matchAndReplace "markdown2pdf"
matchAndReplace "pandoc"
matchAndReplace "quilt"

matchAndReplace "awk"
matchAndReplace "cat"
matchAndReplace "cp"
matchAndReplace "echo"
matchAndReplace "getopt"
matchAndReplace "grep"
matchAndReplace "gzip"
matchAndReplace "head"
matchAndReplace "man"
matchAndReplace "mkdir"
matchAndReplace "pwd"
matchAndReplace "renice"
matchAndReplace "rm"
matchAndReplace "wc"

## Just check, don't replace
matchAndReplace "basename"
matchAndReplace "date"
matchAndReplace "pwd"

replaceExeInMakefile "bash"
replaceExeInMakefile "find"
replaceExeInMakefile "gpg"
replaceExeInMakefile "gzip"
replaceExeInMakefile "install"
replaceExeInMakefile "markdown2pdf"
replaceExeInMakefile "pandoc"
replaceExeInMakefile "sh"
replaceExeInMakefile "touch"

echo "System is configured. Continue with 'make'."
